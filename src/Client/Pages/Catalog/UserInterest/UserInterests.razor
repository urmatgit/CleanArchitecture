@page "/catalog/userinterests"
@attribute [Authorize(Policy = Permissions.Interests.View)]
@inject Microsoft.Extensions.Localization.IStringLocalizer<UserInterests> _localizer
@using BlazorHero.CleanArchitecture.Application.Features.UserInterests.Queries.GetAll
@using BlazorHero.CleanArchitecture.Client.Extensions.Controls;
<HeroTitle Title="@_localizer["User interests"]" Description="@_localizer["Manage your interests."]" />
<MudCard>
    <MudCardContent>
        <MudChipSet  @bind-SelectedChips="selected"  MultiSelection="true" Filter="true" >
            @foreach (var value in _interestList)
            {
                <MudChipEx Text="@value.Name" Default="@value.Checked" Id="@value.Id"   ></MudChipEx>
            }

            @*<MudChip Text="Milk"></MudChip>
            <MudChip Text="Eggs"></MudChip>
            <MudChip Text="Soap"></MudChip>
            <MudChip Text="Cornflakes"></MudChip>
            <MudChip Text="Salad"></MudChip>
            <MudChip Text="Apples"></MudChip>
            <MudChip Text="Red wine"></MudChip>*@
        </MudChipSet>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="DoSave">@_localizer["Save"]</MudButton>
    </MudCardActions>
</MudCard>